<div style="width: 100vw; height: 350px;
  background-image: url('https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=1200');
  background-position: center; background-size: cover;"></div>

<div class="container mt-5 bg-light p-3">
  <div class="row">
    <div class="col-8">
    <div class="bg-light">
      <h1> <%= @flat.name %> </h1>
      <h2> <%= @flat.address %> </h2>
    </div>
    <div class="bg-light">
      <h3> <%= @flat.description %> </h3>
    </div>
    </div>
    <div class="col-3">
    <div class="mb-3 bg-light">
      <h4 class="mb-3"> <%= @flat.number_of_guests %> </h4>
      <h5 class="mb-3"> <%= @flat.price_per_night %> </h5>
    </div>
    <div class='bg-light'>
      <%= link_to 'Edit', edit_flat_path(@flat.id), class: 'btn btn-primary mb-2' %>
    </div>
    </div>
  </div>

</div>
