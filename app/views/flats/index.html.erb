<div class='container text-left'>
  <h1>All flats</h1>
  <div class='d-flex justfy-between'>
    <div class='row'>
    <% @flats.each do |flat| %>
      <div class='col-4'>
        <div class="card m-2" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h4 class="card-title"><%= flat.name %></h4>
            <h6 class="card-text"><%= flat.address %></h6>
            <p class="card-text">Guests: <%= flat.number_of_guests %></p>
            <p class="card-text">Price: <%= flat.price_per_night %></p>
            <%= link_to 'More info', flat_path(flat.id), class: 'btn btn-info mb-2' %>
            <%= link_to 'Edit', edit_flat_path(flat.id), class: 'btn btn-primary mb-2' %>
            <%= link_to 'Remove', "/flats/#{flat.id}", method:'delete', class: 'btn btn-danger mb-2' %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
